<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mc.ashu16012.quiz_assignfirst.QuizActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/true_str"
        android:id="@+id/truebtn"
        android:layout_toEndOf="@+id/resetbtn"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_centerInParent="true"
        android:drawableEnd="@drawable/thumpsup"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nxt_str"
        android:id="@+id/nxtbtn"
        android:layout_below="@+id/truebtn"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:drawableEnd="@drawable/nextarrow"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_str"
        android:id="@+id/resetbtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_score_str"
        android:id="@+id/scorebtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questxt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/ques_str"
        android:minHeight="100dp"
        android:gravity="center"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/false_str"
        android:id="@+id/falsebtn"
        android:layout_alignTop="@+id/truebtn"
        android:layout_toEndOf="@+id/truebtn"
        android:drawableEnd="@drawable/thumpsdown"/>

</RelativeLayout>
